<h1>Photo Details</h1>

<dl>
<dt>Image</dt>
<dd><img src="<%= @selected_photo.image %>" alt="<%= @selected_photo.caption %>"></dd>
<dt>Caption</dt>
<dd><%= @selected_photo.caption %></dd>
<dt>Owner</dt>
<dd><%= @selected_photo.poster.username %></dd>
<dt>Posted</dt>
<dd><%= @selected_photo.created_at %></dd>
<dt>Edit photo</dt>
<dd>Form</dd>
<dt>Delete the photo</dt>
<dd><a href="/delete_photo/<%= @selected_photo.id %>">Delete this photo</a></dd>
</dl>

<h2>Comments</h2>

<table>
<tr>
  <th>Commenter</th>
  <th>Comment</th>
  <th>Posted</th>
</tr>

<% @photo_comments.each do |a_comment| %>
<tr>
  <td><%= a_comment.commenter.username %></td>
  <td><%= a_comment.body %></td>
  <td><%= a_comment.created_at %></td>
</tr>
<%end%>
</table>

