<h1>Photo Details</h1>

<dl>
<dt>Image</dt>
<dd><img src="<%= @selected_photo.image %>" alt="<%= @selected_photo.caption %>"></dd>
<dt>Caption</dt>
<dd><%= @selected_photo.caption %></dd>
<dt>Owner</dt>
<dd><%= @selected_photo.poster.username %></dd>
<dt>Posted</dt>
<dd><%= @selected_photo.created_at %></dd>
<dt>Edit photo</dt>

    <form action="/update_photo/<%= @selected_photo.id %>">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value="<%= @selected_photo.image %>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."><%= @selected_photo.caption %></textarea>

      <button>Update photo</button>
    </form>

<dt>Delete the photo</dt>
<dd><a href="/delete_photo/<%= @selected_photo.id %>">Delete this photo</a></dd>
</dl>

<h2>Comments</h2>

<table>
<tr>
  <th>Commenter</th>
  <th>Comment</th>
  <th>Posted</th>
</tr>

<% @photo_comments.each do |a_comment| %>
<tr>
  <td><%= a_comment.commenter.username %></td>
  <td><%= a_comment.body %></td>
  <td><%= a_comment.created_at %></td>
</tr>
<%end%>
</table>

